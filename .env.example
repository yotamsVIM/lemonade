# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/lemonade_dev
TEST_MONGODB_URI=mongodb://mongodb:27017/lemonade_test

# API Configuration
PORT=3000

# AWS Bedrock AI Configuration
# AWS profile is automatically set to ai-developer when running pnpm dev/start
# You can override it here if needed
AWS_REGION=us-east-1
# AWS_PROFILE=ai-developer

# Bedrock Model Configuration
# Default: anthropic.claude-3-5-sonnet-20240620-v1:0 (on-demand for dev)
# Override in production with Claude Sonnet 4.5 when available:
# BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-5-20250929-v1:0

# AI Worker Configuration
AI_WORKER_ENABLED=true
AI_WORKER_POLL_INTERVAL=5000
AI_WORKER_MAX_CONCURRENT=3
